<UserControl xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:converters="clr-namespace:Avalonia.Data.Converters;assembly=Avalonia.Base" xmlns:vm="clr-namespace:FitnessTrackerGUI.ViewModels" x:Class="FitnessTrackerGUI.Views.LoginView" x:DataType="vm:LoginViewModel">
    <Panel><!-- Background overlay -->
        <Rectangle Fill="#1E3A8A" Opacity="0.9"/><!-- Centered login card -->
        <Border Background="#FFFFFF20" Padding="30" CornerRadius="15" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Width="300" Spacing="20"><!-- Header -->
                <TextBlock Text="Welcome Back" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/><!-- Input Fields -->
                <StackPanel Spacing="8">
                    <TextBox Classes="ModernInput" Watermark="Username" Text="{Binding Username}"/>
                    <TextBox Classes="ModernInput" Watermark="Password" PasswordChar="â€¢" Text="{Binding Password}"/>
                </StackPanel><!-- Error Message -->
                <Border Background="#FEE2E2" CornerRadius="5" Padding="10" IsVisible="{Binding ErrorMessage, Converter={x:Static converters:StringConverters.IsNotNullOrEmpty}}">
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="#B91C1C" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                </Border><!-- Login Button -->
                <Button Content="Sign In" Command="{Binding LoginCommand}" Classes="Primary" HorizontalAlignment="Stretch"/><!-- Registration Prompt -->
                <StackPanel HorizontalAlignment="Center" Spacing="4">
                    <TextBlock Text="Don&apos;t have an account?" Foreground="White"/>
                    <Button Content="Create Account" Command="{Binding NavigateToRegisterCommand}" Classes="TextButton" HorizontalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Panel>
</UserControl>